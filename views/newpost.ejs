<%- include("./partials/header") %>

<%- include("./partials/navbar") %>

<div class="container" style="margin-top:30px;">
      <h1 style="text-align:center;">Yeni Etkinlik Oluştur</h1>
      <div class="row">
        <div class="col-lg-3 col-md-2 col-1">

        </div>
        <div class="col-lg-6 col-md-8 col-10">
          <form action="/posts" method="post" >
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="date" placeholder="date">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="tur" placeholder="tur">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
              <!-- <input class="form-control" type="text" name="postDetail" placeholder="postDetail"> -->
              <textarea class="form-control" name="postDetail" rows="5" cols="80" placeholder="Etkinlik detayları"></textarea>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-lg btn-primary btn-block">Gönder</button>
            </div>
          </form>
        </div>
        <div class="col-lg-3 col-md-2 col-1">

        </div>
      </div>



</div>
